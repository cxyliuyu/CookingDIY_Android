<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/messagelistitem_userimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/userdefaultimg"
        app:civ_border_width="2dp"
        app:civ_border_color="#777777"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/messagelistitem_username"
            android:layout_width="match_parent"
            android:text="张三"
            android:textSize="21dp"
            android:textColor="@color/win8_green"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/messagelistitem_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="hahahahahhahhahhaha哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿嘿"/>
        <TextView
            android:id="@+id/messagelistitem_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/DarkGray"
            android:layout_marginBottom="5dp"
            android:text="2016-6-15"/>
    </LinearLayout>


</LinearLayout>
