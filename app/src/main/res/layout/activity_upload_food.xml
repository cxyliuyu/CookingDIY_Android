<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgray"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    tools:context="com.cxyliuyu.www.cookingdiy_android.Activity.UploadFoodActivity">
    <include
        android:id="@+id/fooddetail_toobar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fooddetail_scrollview"
        android:layout_below="@+id/fooddetail_toobar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                float:fletPaddingBottom="10dp"
                float:fletTextAppearance="@style/floatlabelededittext">
                <EditText
                    android:id="@+id/uploadactivity_foodnameedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:hint="菜谱名称"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                float:fletPaddingBottom="10dp"
                float:fletTextAppearance="@style/floatlabelededittext">
                <EditText
                    android:id="@+id/uploadactivity_foodcontentedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:maxLines="5"
                    android:hint="简介"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <ListView
                android:id="@+id/uploadactivity_foodlistlistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </ListView>
            <LinearLayout
                android:id="@+id/uploadactivity_addfoodlistlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/win8_green"
                    android:text="添加一种用料"/>
            </LinearLayout>
            <ListView
                android:id="@+id/uploadactivity_foodsteplistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </ListView>
            <LinearLayout
                android:id="@+id/uploadactivity_addfoodsteplayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/win8_green"
                    android:text="添加一个步骤"/>
            </LinearLayout>

            <info.hoang8f.widget.FButton
                android:id="@+id/uploadactivity_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/win8_green"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                fbutton:shadowEnabled="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
            <info.hoang8f.widget.FButton
                android:id="@+id/uploadactivity_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/DarkGray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                fbutton:shadowEnabled="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
